<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="anandsingh.net.spreadingsmiles.thankyou2">

    <ImageView
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"
        android:src="@drawable/smile"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />





    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:text="Welcome to spreading smiles!" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="23dp"
        android:text="Your one walk can save a life." />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="17dp"
        android:textSize="16sp"
        android:text="thank you for connecting with us as a volunteer. We will contact you as and when we need a volunteer in your preferred area to deliver meals to needy we together can and will bring a change in the life of some good luck" />

</RelativeLayout>
